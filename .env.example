# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Secret for signing responses
GATEKEEPER_SIGNATURE_SECRET=your_signature_secret_here

# Moderation model to use (default: text-moderation-latest)
OPENAI_MODERATION_MODEL=text-moderation-latest

# Vision settings
GATEKEEPER_ENABLE_VISION=false
GATEKEEPER_VISION_MODEL=gpt-4o-mini
GATEKEEPER_VISION_DETAIL=auto
GATEKEEPER_VISION_PROMPT="Analyze this image for a restaurant review or venue listing. Describe the content and identify anything inappropriate or irrelevant for a dining venue. Check for: non-food/restaurant content, offensive material, graphics/text overlays, or poor quality. Is this image suitable for a restaurant listing or review?"

# Security settings
# Comma-separated list of allowed origins for CORS (empty for any origin)
GATEKEEPER_ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com,http://localhost:8000,http://127.0.0.1:8000

# Comma-separated list of API keys that can access the service
GATEKEEPER_API_KEYS=key1,key2,key3

# Content size limits
GATEKEEPER_MAX_TEXT_LENGTH=10000
GATEKEEPER_MAX_IMAGE_SIZE=5242880
GATEKEEPER_MAX_ITEMS=10

# Rate limiting
GATEKEEPER_RATE_LIMIT_TIMES=10
GATEKEEPER_RATE_LIMIT_SECONDS=60 

# Custom moderation thresholds (0.0 to 1.0)
# These override OpenAI's default flagging behavior
GATEKEEPER_THRESHOLD_ALL=0.1  # Global threshold for all categories
# GATEKEEPER_THRESHOLD_HARASSMENT=0.1
# GATEKEEPER_THRESHOLD_HATE=0.1
# GATEKEEPER_THRESHOLD_SEXUAL=0.1
# GATEKEEPER_THRESHOLD_VIOLENCE=0.1
